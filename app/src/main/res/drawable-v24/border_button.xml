<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi click vào -->
    <item android:state_pressed="true">
        <shape>

            <!-- Màu khi click vào -->
            <solid android:color="#FFFFFF" ></solid>

            <!-- Độ rộng đường viền -->
            <stroke android:width="4dp"
                android:color="#3090C7"
                ></stroke>

            <!-- Thuộc tính căn chỉnh -->
            <padding android:left="15dp"
                android:bottom="5dp"
                android:right="15dp"
                android:top="5dp"
                ></padding>

            <!-- Bán kính đường tròn ở 4 góc -->
            <corners android:radius="15dp"
                ></corners>

        </shape>
    </item>

    <!-- Khi không làm gì hết -->
    <item>
        <shape>
            <solid android:color="#3090C7"></solid>

            <!-- Độ rộng đường viền -->
            <stroke android:width="5dp"
                android:color="#3090C7"
                ></stroke>

            <!-- Thuộc tính căn chỉnh -->
            <padding android:left="15dp"
                android:bottom="5dp"
                android:right="15dp"
                android:top="5dp"
                ></padding>

            <!-- Bán kính đường tròn ở 4 góc -->
            <corners android:radius="20dp"
                ></corners>
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"     android:shape="rectangle" >
    <!--Đường tròn 4 góc-->
    <corners
        android:topLeftRadius="50dp"
        android:topRightRadius="50dp"
        android:bottomLeftRadius="50dp"
        android:bottomRightRadius="50dp"></corners>

    <!-- Màu khi click vào -->
    <solid
        android:color="#3090C7"></solid>

    <!-- Thuộc tính căn chỉnh -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"></padding>

    <!--Thuộc tính căn chỉnh kích cỡ-->
    <size
        android:width="45dp"
        android:height="45dp"></size>

    <!--Độ rộng đườmg viền-->
    <stroke
        android:width="3dp"
        android:color="#878787"></stroke>
</shape>